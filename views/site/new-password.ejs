<%- include('../partials/open.ejs') %>
    <%- include('../partials/closeHead.ejs') %>
        <%- include('../partials/nav.ejs') %>
            <div class="h-full bg-gradient-to-tl from-green-300 via-blue-500 to-purple-600 w-full py-20 px-4">
                <% if (error) { %>
                    <div class="max-w-screen-lg mx-auto flex p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800"
                        role="alert">
                        <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor"
                            viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span class="sr-only">Info</span>
                        <div>
                            <p>Ensure that your password met these requirements.</p>
                            <ul class="mt-1.5 ml-4 list-disc list-inside">
                                <li>At least 8 characters (and up to 16 characters)</li>
                                <li>At least one lowercase character</li>
                                <li>At least one uppercase character</li>
                                <li>At least one special character, e.g., ! @ # ?</li>
                            </ul>
                        </div>
                    </div>
                    <% } %>

                <div class="flex flex-col items-center justify-center">
                    <img class="w-40" src="/images/nav/logo-dark.svg" alt="logo">

                    <div class="bg-white shadow rounded lg:w-1/3  md:w-1/2 w-full p-10 mt-16">
                        <h1 tabindex="0" class="focus:outline-none text-2xl font-extrabold leading-6 text-gray-800">
                            Update Your Password</h1>

                        <form action="/new-password/<%= token %>" method="POST" class="mt-4">
                            <input type="hidden" name="_csrfToken" value="<%= csrfToken %>" />
                            <div class="mt-6  w-full">
                                <label for="pass" class=" font-medium leading-none text-gray-800">
                                    Password
                                </label>
                                <div class="relative flex items-center justify-center">
                                    <input id="pass" type="password"
                                        class="bg-gray-200 border rounded font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2"
                                        required name="password" />
                                    <div class="absolute right-0 mt-2 mr-3 cursor-pointer">
                                        <img src="https://tuk-cdn.s3.amazonaws.com/can-uploader/sign_in-svg5.svg"
                                            alt="viewport">
                                    </div>
                                </div>
                            </div>
                            <div class="mt-8">
                                <button role="button" type="submit"
                                    class="focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 text-sm font-semibold leading-none text-white focus:outline-none bg-indigo-700 border rounded hover:bg-indigo-600 py-4 w-full">Update
                                    Password</button>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
            <%- include('../partials/footer.ejs') %>
                <%- include('../partials/close.ejs') %>