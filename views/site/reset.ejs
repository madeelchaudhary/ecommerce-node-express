<%- include('../partials/open.ejs') %>
    <%- include('../partials/closeHead.ejs') %>
        <%- include('../partials/nav.ejs') %>
            <div class="h-full bg-gradient-to-tl from-green-300 via-blue-500 to-purple-600 w-full py-20 px-4">

                <% if (message) { %>
                    <div class="max-w-screen-lg mx-auto flex p-4 mb-4 text-sm text-blue-800 border border-blue-300 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400 dark:border-blue-800"
                        role="alert">
                        <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor"
                            viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span class="sr-only">Info</span>
                        <div>
                            <span class="font-medium">Note!</span>
                            <%= message %>
                        </div>
                    </div>
                    <% } %>

                <% if (error) { %>
                    <div class="max-w-screen-lg mx-auto flex p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800"
                        role="alert">
                        <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor"
                            viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span class="sr-only">Info</span>
                        <div>
                            <p><span class="font-medium">Invalid Email!</span> Please enter a valid email.</p>
                        </div>
                    </div>
                    <% } %>

                        <div class="flex flex-col items-center justify-center">
                            <img class="w-40" src="/images/nav/logo-dark.svg" alt="logo">

                            <div class="bg-white shadow rounded lg:w-1/3  md:w-1/2 w-full p-10 mt-16">
                                <h1 tabindex="0"
                                    class="focus:outline-none text-2xl font-extrabold leading-6 text-gray-800">
                                    Reset Your Password</h1>

                                <form action="/reset" method="POST" class="mt-4">
                                    <input type="hidden" name="_csrfToken" value="<%= csrfToken %>" />
                                    <div>
                                        <label id="email" class=" font-medium leading-none text-gray-800">
                                            Email
                                        </label>
                                        <input aria-labelledby="email" type="email"
                                            class="bg-gray-200 border rounded font-medium leading-none text-gray-800 py-3 w-full pl-3 mt-2"
                                            name="email" value="<%= oldInput.email %>" required>
                                    </div>
                                    <div class="mt-8">
                                        <button role="button" type="submit"
                                            class="focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700 text-sm font-semibold leading-none text-white focus:outline-none bg-indigo-700 border rounded hover:bg-indigo-600 py-4 w-full">Reset
                                            Password</button>
                                    </div>
                                </form>


                            </div>
                        </div>
            </div>
            <%- include('../partials/footer.ejs') %>
                <%- include('../partials/close.ejs') %>